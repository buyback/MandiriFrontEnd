<div class="modal fade bs-modal-lg" id="PopUpUpdateItem" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="UpdateTitle">Edit Item</h4>
            </div>
            <div class="modal-body">
                <div class="tab-content">
                    <form class="form-horizontal" id="formPopUpUpdate" role="form">
                        <div class="form-body">
                            <div class="form-group mb-3">
                                <select class="form-select slsCategory" id="selectCategoryItem" aria-label="Default select example">
                                    <option selected>Select Category</option>
                                </select>
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text" id="inputGroup-sizing-default">Name</span>
                                <input type="text" class="form-control" aria-label="Sizing example input" id="tbxUpdateItemName" required>
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-2">
                                    Description
                                </label>
                                <div class="mb-3">
                                    <textarea id="tarUpdateItemRemark" class="form-control" style="width: 100%; height: 85px;" required></textarea>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success btnActionUpdate" data-style="zoom-in" type="button" id="btnPopUpUpdateItemSubmit">Submit</button>
                <button type="button" class="btn btn-secondary btnActionUpdate" id="btnPopUpUpdateItemClose" data-dismiss="modal"><i class="fa fa-angle-left"></i>&nbsp;Close</button>
            </div>
        </div>
    </div>
</div>
<script src="../scripts/_popUpUpdate.js" type="text/javascript"></script>